<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MBStest03.Views.MyStreamPage"
			 xmlns:viewmodel="clr-namespace:SplashScreenTest02.ViewModels"
			 xmlns:view="clr-namespace:SplashScreenTest02.Views">
	<ContentPage.Resources>
		<viewmodel:MyStreamViewModel x:Key="msVM"/>
		<view:MyStreamGraphView x:Key="msgV"/>
	</ContentPage.Resources>
	<ContentPage.Content>
		
        <!--<StackLayout>
            <Label Text="Min Å placeholder!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>-->
		<Grid BindingContext="{StaticResource msVM}">
			<Grid.RowDefinitions>
				<RowDefinition Height="20"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="20"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="20"/>
			</Grid.ColumnDefinitions>
			<Frame BindingContext="{Binding Path=MsGraphVM}"
				   Content="{StaticResource msgV}"
				   Grid.Row="3"
				   Grid.Column="1"
				   Grid.RowSpan="4"
				   Grid.ColumnSpan="3"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>